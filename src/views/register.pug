extends layout.pug

block head
  link(rel="stylesheet", href="/form.css")
  style.
    body {
      background-image: url("https://thumbs.dreamstime.com/b/abstract-medieval-nautical-map-background-old-vintage-159658330.jpg");
      background-repeat: no-repeat;
      background-size: cover;
    }
    .form-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

block content
  div.form-container
    form(action='/api/register', method='POST')
      h2 Register
      label(for='name') Enter your name:
      input(name='name', type='text', required)
      label(for='email') Enter your email:
      input(name='email', type='email', required)
      label(for='password') Enter your password:
      input(name='password', type='password', required)
      label(for='confirm-password') Confirm your password:
      input(name='confirm-password', type='password', required)
      input(type='submit', value='Submit')
